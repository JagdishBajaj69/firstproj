#Using random module 
import random

#User's choice for playing game if not type "stop"
def get_user_choice():
    print("Choose one: Rock, Paper, Scissors (or type 'stop' to end the game)")
    user_input = input("Enter your choice: ").strip().lower()
    if user_input in ['rock', 'paper', 'scissors', 'stop']:
        return user_input
    else:
        print("Invalid choice. Please choose Rock, Paper, Scissors, or Stop.")
        return get_user_choice()

#Randomly generates the computer's choice using Python's random.choice() function
def get_computer_choice():
    return random.choice(['rock', 'paper', 'scissors'])

#Determine the winner based on the rules of Rock-Paper-Scissors
def determine_winner(user_choice, computer_choice):
    if user_choice == computer_choice:
        return "It's a tie!"
    elif (user_choice == 'rock' and computer_choice == 'scissors') or \
         (user_choice == 'paper' and computer_choice == 'rock') or \
         (user_choice == 'scissors' and computer_choice == 'paper'):
        return "You win!"
    else:
        return "Computer wins!"

#The user and sets up the game loop.
def play_game():
    print("Welcome to Rock, Paper, Scissors!")
    while True:
        user_choice = get_user_choice()
        if user_choice == 'stop':
            print("Thanks for playing! Goodbye!")
            break

        computer_choice = get_computer_choice()
        
        print(f"\nYou chose: {user_choice.capitalize()}")
        print(f"Computer chose: {computer_choice.capitalize()}")
        
        result = determine_winner(user_choice, computer_choice)
        print(f"\n{result}\n")

if __name__ == "__main__":
    play_game()
